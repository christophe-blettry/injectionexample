<beans>
	<bean id="redisConnectionReflect" class="io.cb.java.inject.util.RedisConnection">
		<property name="host" value="localhost"/>
		<property name="port" value="6379"/>
		<property name="pool" ref="redisPoolReflect"/>
	</bean>
	
	<bean id="redisConnectionBytecode" class="io.cb.java.inject.util.RedisConnection">
		<property name="host" value="localhost"/>
		<property name="port" value="6399"/>
		<property name="pool" ref="redisPoolBytecode"/>
	</bean>

	<bean id="redisConnectionProxy" class="io.cb.java.inject.util.RedisConnection">
		<property name="host" value="localhost"/>
		<property name="port" value="6389"/>
		<property name="pool" ref="redisPoolProxy"/>
	</bean>

	<bean id="redisPoolReflect" class="io.cb.java.inject.util.RedisPool">
		<property name="number" value="1"/>
		<property name="using" value="reflection"/>
	</bean>
	
	<bean id="redisPoolBytecode" class="io.cb.java.inject.util.RedisPool">
		<property name="number" value="3"/>
		<property name="using" value="bytecode modification (constructor)"/>
	</bean>

	<bean id="redisPoolProxy" class="io.cb.java.inject.util.RedisPool">
		<property name="number" value="2"/>
		<property name="using" value="proxification"/>
	</bean>
</beans>